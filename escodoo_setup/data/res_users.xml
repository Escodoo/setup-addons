<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- System Manager -->
    <record id="user_system_manager" model="res.users">
        <field name="login">manager</field>
        <field name="password">manager</field>
        <field name="partner_id" ref="escodoo_setup.partner_system_manager"/>
        <field name="company_id" ref="base.main_company"/>
        <field name="company_ids" eval="[(4, ref('base.main_company'))]"/>
        <field name="groups_id" eval="[(6,0,[ref('base.group_allow_export'),
                                            ref('base.group_erp_manager'),
                                            ref('base.group_multi_company'),
                                            ref('base.group_multi_currency'),
                                            ref('base.group_no_one'),
                                            ref('base.group_partner_manager'),
                                            ref('base.group_user')])]"/>
        <field name="image_1920" type="base64" file="base/static/img/avatar_grey.png"/>
        <field name="signature"><![CDATA[<span>-- <br/>
System Manager</span>]]></field>
    </record>

</odoo>
